{
	"name": "i-shove-you-so-much",
	"version": "0.0.1",
	"description": "A simple two-player board game",
	"main": "index.js",
	"scripts": {
		"clean": "del /S /Q .\\src\\client\\src\\*.js .\\src\\game\\*.js .\\src\\server\\*.js .\\test\\*.js && del .\\app.js",
		"build": "tsc",
		"prestart": "npm run build",
		"start": "node app.js",
		"pretest": "npm run build",
		"test": "tape ./test/**/*.js | tap-min",
		"lint": "tslint ./src/**/*.ts -e ./src/client/jspm_packages/**/*.ts",
		"install-client": "jspm install"
	},
	"author": "Andy Steinberg",
	"license": "MIT",
	"devDependencies": {
		"@types/sinon": "^1.16.34",
		"@types/tape": "^4.2.28",
		"sinon": "^1.17.6",
		"tap-min": "^1.1.0",
		"tape": "^4.6.3",
		"tslint": "^4.2.0",
		"typescript": "^2.1.4"
	},
	"dependencies": {
		"@types/koa": "^2.0.37",
		"@types/koa-bodyparser": "^3.0.22",
		"@types/koa-mount": "^2.0.18",
		"@types/koa-router": "^7.0.21",
		"@types/koa-static": "^2.0.22",
		"@types/ramda": "0.0.2",
		"@types/whatwg-fetch": "0.0.33",
		"aurelia-bootstrapper": "^2.0.1",
		"aurelia-fetch-client": "^1.1.0",
		"koa": "^2.0.0",
		"koa-bodyparser": "^3.2.0",
		"koa-mount": "^1.3.0",
		"koa-router": "^7.0.1",
		"koa-static": "^2.0.0",
		"ramda": "^0.23.0"
	},
	"jspm": {
		"directories": {
			"baseURL": "src/client"
		},
		"dependencies": {
			"aurelia-bootstrapper": "npm:aurelia-bootstrapper@^2.0.1",
			"aurelia-fetch-client": "npm:aurelia-fetch-client@^1.1.0",
			"aurelia-framework": "npm:aurelia-framework@^1.0.8"
		},
		"devDependencies": {
			"babel": "npm:babel-core@^5.8.24",
			"babel-runtime": "npm:babel-runtime@^5.8.24",
			"core-js": "npm:core-js@^1.1.4",
			"typescript": "npm:typescript@^2.0.7"
		}
	}
}
